<Window x:Class="_08._WpfExercise_v._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08._WpfExercise_v._2"
        mc:Ignorable="d"
        Title="Choose a suit" SizeToContent="WidthAndHeight" Loaded="Window_Loaded">

    <StackPanel Background="Lavender" Margin="0">
        <ComboBox Name="cmbSuit" Margin="30"
	        BorderThickness="1" BorderBrush="Black" ItemsSource="{Binding SuitName}" />


    </StackPanel>
</Window>
