<Window x:Class="_01._WpfExercise_v._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01._WpfExercise_v._1"
        mc:Ignorable="d"
        Title="TV programmes" SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen">

    <!-- create a dark blue border -->
    <Border BorderBrush="Navy" Background="Lavender" BorderThickness="2" Name="border1" Margin="20" >

        <StackPanel Orientation="Horizontal">

            <!-- images embedded in a horizontal stack panel -->
            <Border BorderBrush="Black" BorderThickness="1" Height="80" Width="80" Margin="10">
                <Image Source="/Res/Hector.jpg" Stretch="Fill"  />
            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Image Source="/Res/Button moon.jpg" Stretch="Fill"  />
            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Margin="10" Height="80" Width="80">
                <Image Source="/Res/Sean.jpg" Stretch="Fill"  />
            </Border>

        </StackPanel>

    </Border>
</Window>

